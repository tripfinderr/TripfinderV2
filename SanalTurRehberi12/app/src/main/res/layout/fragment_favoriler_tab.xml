<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavorilerTab">

    <androidx.cardview.widget.CardView
        android:id="@+id/FavlariGor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="26dp"
        android:onClick="FavlariGor"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/YorumlariGor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Favorileri Gör"
            android:textColor="#000"
            android:textSize="25sp"></TextView>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/YorumlariGor"
        android:onClick="YorumlariGetir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="381dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FavlariGor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Yorumları Gör"
            android:textColor="#000"
            android:textSize="25sp">

        </TextView>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>